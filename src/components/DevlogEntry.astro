---
import type { CollectionEntry } from 'astro:content';

type Props = {
    post: CollectionEntry<'posts'>;
}


const {post} = Astro.props;


function getDay(){
    let str_arry = post.data.date.split(' ');
    return str_arry[1];
}

function getMonth(){
    let str_arry = post.data.date.split(' ');
    return str_arry[0];
}

function getYear(){
    let str_arry = post.data.date.split(' ');
    return str_arry[2];
}

---

<div class = "devlog-image-container" style = "margin: 10px;">
    <div class = "devlog-image-inner">
        <div style = "display: flex; flex-direction: column; align-items: start; justify-content: start; margin-right: 5%;">
            <h1 style = "color: var(--text-color-compliment); margin: 0px; font-size: 60px; text-align:center; min-width: 100%;">
                {getDay()}
            </h1>
            <p style = "color: var(--text-color-compliment); margin:0px; word-break: keep-all; white-space: nowrap;">
                {getMonth() + " " +getYear()}
            </p>
        </div>
        <div class = "devlog-image-background">
            <a href = {`/posts/${post.slug}/`} style = "margin-top: 0px; margin-bottom: 0px">
                <h2 style = "color: var(--text-color-compliment); ">
                    {post.data.title}
                </h2>
            </a>
            <p style = "margin-top: 5px; margin-bottom: 0px">
                <i>
                 {post.data.description.slice(0, 200) + "..."}
                </i> 
            </p>
            <a href ={`/posts/${post.slug}/`} style = "align-self: end; text-decoration: underline; color: var(--text-color-compliment);"> Read more </a>
        </div>
    </div>
</div>


